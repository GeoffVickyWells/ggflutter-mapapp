{
  "version": 8,
  "name": "Barcelona Offline",
  "metadata": {
    "maputnik:renderer": "mlgljs"
  },
  "sources": {
    "barcelona": {
      "type": "vector",
      "url": "mbtiles:///assets/maps/barcelona.mbtiles",
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "asset://assets/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "barcelona",
      "source-layer": "water",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": "#a8ddf0",
        "fill-opacity": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "barcelona",
      "source-layer": "waterway",
      "filter": ["==", ["geometry-type"], "LineString"],
      "paint": {
        "line-color": "#a8ddf0",
        "line-width": {
          "base": 1.4,
          "stops": [[8, 0.5], [20, 15]]
        }
      }
    },
    {
      "id": "landuse_park",
      "type": "fill",
      "source": "barcelona",
      "source-layer": "park",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": "#c8facc",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "barcelona",
      "source-layer": "landuse",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["residential", "#e8e4e0"],
            ["commercial", "#f5e4d4"],
            ["industrial", "#e8e0d8"],
            ["retail", "#f5e4d4"]
          ]
        },
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "barcelona",
      "source-layer": "landcover",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["grass", "#c8facc"],
            ["forest", "#a8ddb5"],
            ["wood", "#a8ddb5"],
            ["sand", "#f5e9c6"]
          ]
        },
        "fill-opacity": 0.5
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "barcelona",
      "source-layer": "building",
      "minzoom": 13,
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-opacity": 0.7,
        "fill-outline-color": "#b8ada0"
      }
    },
    {
      "id": "transportation",
      "type": "line",
      "source": "barcelona",
      "source-layer": "transportation",
      "filter": ["==", ["geometry-type"], "LineString"],
      "paint": {
        "line-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["motorway", "#faa862"],
            ["trunk", "#faa862"],
            ["primary", "#fbb862"],
            ["secondary", "#fdd096"],
            ["tertiary", "#fef8c4"],
            ["minor", "#ffffff"],
            ["service", "#ffffff"],
            ["track", "#d4b38e"]
          ],
          "default": "#ffffff"
        },
        "line-width": {
          "base": 1.4,
          "stops": [
            [6, 0.5],
            [20, 30]
          ]
        }
      }
    },
    {
      "id": "transportation_name",
      "type": "symbol",
      "source": "barcelona",
      "source-layer": "transportation_name",
      "minzoom": 12,
      "filter": ["has", "name:latin"],
      "layout": {
        "text-field": ["get", "name:latin"],
        "text-font": ["Noto Sans Regular"],
        "text-size": {
          "stops": [[13, 10], [20, 16]]
        },
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_label",
      "type": "symbol",
      "source": "barcelona",
      "source-layer": "place",
      "filter": ["has", "name:latin"],
      "layout": {
        "text-field": ["get", "name:latin"],
        "text-font": ["Noto Sans Bold"],
        "text-size": {
          "stops": [[6, 10], [12, 16]]
        }
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "poi",
      "type": "symbol",
      "source": "barcelona",
      "source-layer": "poi",
      "minzoom": 14,
      "filter": ["has", "name:latin"],
      "layout": {
        "text-field": ["get", "name:latin"],
        "text-font": ["Noto Sans Italic"],
        "text-size": 10,
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    }
  ]
}
